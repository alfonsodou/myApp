<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.debugger {
		position: fixed !important;
		top: 10px;
		right: 10px;
		z-index: 100;
	}
	
	.menu {
		padding: 15px 0;
	}
	</ui:style>

	<g:DockLayoutPanel unit='PX'>
		<!-- Main menu tree. -->
		<g:north size='50'>
			<g:FlowPanel>
				<g:AbsolutePanel ui:field='debuggerPanel'
					stylePrimaryName='{style.debugger}' />
				<g:ScrollPanel height="90%">
					<g:FlowPanel ui:field='menu' stylePrimaryName='{style.menu}'>
						<g:Button ui:field="button1">Ejemplo 1</g:Button>
						<g:Button ui:field="button2">Ejemplo 2</g:Button>
						<g:Button ui:field="button3">Ejemplo 3</g:Button>
					</g:FlowPanel>
				</g:ScrollPanel>
			</g:FlowPanel>
		</g:north>

		<!-- Main content area. -->
		<g:center>
			<g:SimpleLayoutPanel ui:field='content' />
		</g:center>
	</g:DockLayoutPanel>


</ui:UiBinder> 